<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_cupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless"
        >

        <RelativeLayout
            android:id="@+id/two_line_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:minHeight="72dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/frame_imagen_carrito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imagen_producto"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="7dp"
                        android:contentDescription="@string/thumbnail"
                        android:src="@drawable/noimage"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:layout_weight="1">

                        <TextView
                            android:id="@+id/itemTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Tienes 1/8 de pollo gratis por tus compras"
                            android:textColor="#616161"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/solo_tienda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Solo reclamar en el local ¡Gracias!"
                            android:textSize="12sp"
                            android:textStyle="italic" />


                        <TextView
                            android:id="@+id/pulse_boton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Pulse el botón de la derecha para pedir"
                            android:textSize="10sp"
                            android:textStyle="italic" />

                </LinearLayout>



                <ImageView
                    android:id="@+id/boton_pedir"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/thumbnail"
                    android:clickable="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/boton_pedir"/>


            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>