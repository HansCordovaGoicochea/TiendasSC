<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/logoheader"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/padding_izquierdo_cabecera"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Logo-->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/ancho_logo"
        android:layout_height="120dp"
        android:layout_gravity="start"
        android:src="@drawable/logomobil" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="2">

        <!-- Nombre de Usuario -->
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Juana Maria Perez"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/md_indigo_900"
            android:textStyle="bold" />

        <!-- Correo de la cuenta -->
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="juanaperez01@gmail.com"
            android:textColor="@color/md_indigo_900"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <!--&lt;!&ndash; Correo de la cuenta &ndash;&gt;-->
